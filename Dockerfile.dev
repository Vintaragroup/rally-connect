# Development stage for Vite
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source files
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run Vite dev server with HMR support
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
